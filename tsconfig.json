{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}
